<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.apache.tomcat.wso2</groupId>
    <artifactId>tomcat</artifactId>
    <version>7.0.34.wso2v1</version>
    <packaging>bundle</packaging>
    <name>tomcat orbit bundle - 7.0.34.wso2v1</name>
    <description>Apache Tomcat</description>

    <dependencies>
        <dependency>
            <groupId>org.apache.tomcat</groupId>
            <artifactId>tomcat-dbcp</artifactId>
            <version>${version.tomcat}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.apache.tomcat.embed</groupId>
            <artifactId>tomcat-embed-core</artifactId>
            <version>${version.tomcat}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.apache.tomcat.embed</groupId>
            <artifactId>tomcat-embed-jasper</artifactId>
            <version>${version.tomcat}</version>
            <optional>true</optional>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.7</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Name>${project.artifactId}</Bundle-Name>
                        <Export-Package>
                            !org.apache.jasper.*,
                            !org.apache.tomcat.jdbc.pool.*,
                            org.apache.naming.*;version="1.7.0",
                            org.apache.tomcat.*;version="1.7.0",
                            org.apache.catalina.*;version="1.7.0",
                            org.apache.coyote.*;version="1.7.0",
                        </Export-Package>
                        <Private-Package>
                            javax.annotation.*,
                            javax.ejb.*,
                            javax.persistence.*,
                            org.apache.juli.*,
                            org.apache.el.*
                        </Private-Package>
                        <Import-Package>
                            *;resolution:=optional
                        </Import-Package>
                        <DynamicImport-Package>*</DynamicImport-Package>
			<Bundle-Classpath>patch.jar,.</Bundle-Classpath>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <properties>
        <version.tomcat>7.0.75</version.tomcat>
    </properties>
</project>
